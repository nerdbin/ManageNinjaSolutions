//The form will submit after password gets matched

add_filter('fluentform/validate_input_item_input_password', function($errorMessage, $field, $formData, $fields, $form) {

    $target_form_id = 8; //replace with your form ID
    if($form->id != $target_form_id ) {
     return $errorMessage ;
    }
    
    
    if( $formData['password'] !=  $formData['password_1']  ){
        $errorMessage=  ['Error! Password does not match'];
    }
    
    return $errorMessage;
}, 10, 5);
